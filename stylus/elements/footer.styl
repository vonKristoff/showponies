footer
	margin-top 4em
	width 100%	
	background-color gold
	color white
	padding 6em 4em
	+mobile()
		padding 3em
	.layout--flex
		margin 0 auto
		max-width 1080px
		width 100%
		display flex
		flex-direction row
		justify-content center
		+mobile()
			flex-direction column
			.box
				width 100%
				margin-left 0
				margin 1em 0					
				&.is-email
					font-size 1em
					text-align center
					border-right none			
					.label
						justify-content center		
			.is-social
				margin 1em 0
				margin-top 2em
	.box
		width 80%
		margin-left 5%
		.label
			margin-bottom .5em
			display flex
			align-items center
			.fa--heart
				padding 0 .5em
		&.is-email
			font-family 'Lora'
			border-right .125em solid white
			+max(810px)
				border-right none
		&.is-social
			font-size 3em
			display flex
			flex-direction row
			justify-content space-around
			align-items center
			+tablet()
				font-size 1.5em
				.is-icon
					margin 0 .5em			
			a, a:visited
				color white			