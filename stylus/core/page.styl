body, header, footer
  font-family 'Roboto'
  

section
  width 100%

section
  &.type--hero
    height calc(100vh - 7em)
    margin-top 5em
    margin-bottom 2em
  &.type--main
    article
      margin 0 auto
      max-width 680px
      width 100%
  &.type--about
    margin-top 7em
    min-height calc(100vh - 7em)
    +mobile()
      margin-top 5em
  &.type--logo
    height calc(50vh - 7em)
    margin-top 6em
    margin-bottom 3em
    +mobile()
        margin-top 5em
  
.type--hero, .type--logo
  background-image url("/images/showponies--hero.jpg")
  background-size contain
  background-position center center
  background-repeat no-repeat
  
.type--main
  article    
    padding 2em 0
    font-size 1.25em
    p
      color grey
    +mobile()
      font-size 1em
      padding 2em
      
.type--about
  display flex
  align-items center
  justify-content center
  background-image url("/images/showponies--logo.jpg")
  background-size contain
  background-position center
  position relative
  .circle
    position absolute
    background-color rgba(255,255,255,.85)
    border-radius 50%
    border .125em solid gold
    z-index 0
    &:before
      content ''
      position absolute
      width 100%
      height 100%
      border-radius 50%
  article
    margin 0 auto
    max-width calc(680px + 4em)
    width 100%
    padding 2em
    z-index 0    
    .head
      text-align center
      h1
        font-size 1.65em   
        margin-bottom .5em
      .subheading 
        background-color gold
        font-size 1.125em
        padding .25em 1em
        border-radius 1em
        color white
        display inline-flex
    .body
      margin-top 2em
      span
        background-color #ffefc0

.type--press
  font-family 'Lora'
  .head  
    display flex
    justify-content center
    align-items center
    .fa--awards
      font-size 3em
      color gold
      margin-right .5em
    h1
      margin-bottom 0
  .body
    margin-top 2em

.page-split
  font-size 3em
  position relative
  display flex
  justify-content center
  align-items center
  span
    padding 0 1em
    background-color white
  &:after
    content ''
    position absolute
    width 100%
    z-index -1
    left 0
    bottom 50%
    background-color #efefef
    height .125em    