/**
 * INTERACTIONS
 */

.ui
  &--pulse
    animation pulse 2s infinite
  &--pulse-pseudo
    &:before
      position absolute
      content ''
      width 100%
      height 100%
      border-radius .5em
      animation pulse 2s infinite
  &--pop
    &:hover
      div
        transform scale(0.85) rotate(-2deg)
  &--underline    
    &:after
      transition all .3s
      position absolute
      content ''
      width 0
      left 50%
      bottom -0.25em
      height .125em
      background-color gold
    &:hover
      &:after
        left 0
        width 100%